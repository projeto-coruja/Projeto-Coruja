<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <servlet>
  <display-name>InitServlet</display-name>
  <servlet-name>InitServlet</servlet-name>
  <servlet-class>webview.servlets.InitServlet</servlet-class>
  <init-param>
   <param-name>log4j.properties-location</param-name>
   <param-value>WEB-INF/log4j.properties</param-value>
  </init-param>
 </servlet>
 <session-config>
  <tracking-mode>COOKIE</tracking-mode>
 </session-config>
 <welcome-file-list>
  <welcome-file>/public/index.jsp</welcome-file>
  <welcome-file>/protected/user/indexUser.jsp</welcome-file>
  <welcome-file>/protected/admin/indexAdmin.jsp</welcome-file>
 </welcome-file-list>
</web-app>
